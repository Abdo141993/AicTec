@model ZKTeco.Dto.User.LoginUserDto

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutFullScreen";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group" style="-webkit-box-shadow: 0px 0px 16px 0px rgba(0,0,0,0.83); -moz-box-shadow: 0px 0px 16px 0px rgba(0,0,0,0.83); box-shadow: 0px 0px 16px 0px rgba(0,0,0,0.83);">
                    <div class="card p-4">
                        <div class="card-body">
                            <form method="post">
                                <h1>Login</h1>
                                <p class="text-muted">Sign In to your account</p>
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                        <input class="form-control" asp-for="Email" type="text" placeholder="Email or Username">
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                        <input class="form-control" asp-for="Password" type="password" placeholder="Password">
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn px-4 text-white" style=" background-color: #474B4F" type="submit">Login</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <label asp-for="RememberMe">
                                            <input asp-for="RememberMe" />
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6 text-right">
                                        @Html.ActionLink("Register", "Register", "User")
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                    <div class="card text-white py-5 d-md-down-none" style="width:44%; background-color:#474B4F">
                        <div class="card-body text-center">
                            <div>
                                <img src="~/images/Logo.png" width="200" />
                                <br />
                                <br />
                                In 1985, ZKTeco (previously ZKSoftware) was established and began research and development
                                of fingerprint
                                algorithm which made us a leading global developer of security and time management.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
