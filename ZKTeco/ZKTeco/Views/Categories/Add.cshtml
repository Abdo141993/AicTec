@model ZKTeco.Dtos.Category.CategoryDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mx-md-4 mx-2">
    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between">
                    <div class="p-2"><i class="icon-drop"></i> Create Category</div>
                    <div class="p-2"></div>
                    <div><a asp-controller="categories" asp-action="Index">Back to List</a></div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-controller="categories" asp-action="Add" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="@Model.CategoryNameArabic" class="control-label"></label>
                                <input asp-for="@Model.CategoryNameArabic" class="form-control" />
                                <span asp-validation-for="@Model.CategoryNameArabic" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.CategoryNameEnglish" class="control-label"></label>
                                <input asp-for="@Model.CategoryNameEnglish" class="form-control" />
                                <span asp-validation-for="@Model.CategoryNameEnglish" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description" class="control-label"></label>
                                <input asp-for="@Model.Description" class="form-control" />
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ParentCategoryId" class="control-label"></label>
                                <select asp-for="@Model.ParentCategoryId" class="form-control" asp-items="ViewBag.ParentCategoryId">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{

    ViewData["Direction"] =
        @"<li class='breadcrumb-item'>
<a href='/Categories'>Categories</a>
</li>
<li class='breadcrumb-item'>
Create Category
</li>
";
}
